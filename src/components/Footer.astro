---
/**
 * Footer Component
 * Rich footer with company info, quick links, legal, and social placeholders
 */

interface FooterLink {
  label: string;
  href: string;
  isExternal?: boolean;
}

interface FooterSection {
  title: string;
  links: FooterLink[];
}

const footerSections: FooterSection[] = [
  {
    title: 'Company',
    links: [
      { label: 'About Us', href: '/about' },
      { label: 'Our Mission', href: '/mission' },
      { label: 'Technology', href: '/technology' },
      { label: 'Careers', href: '/careers' },
      { label: 'Press Kit', href: '/press' },
    ],
  },
  {
    title: 'Solutions',
    links: [
      { label: 'For Studios', href: '/solutions/studios' },
      { label: 'For Creators', href: '/solutions/creators' },
      { label: 'For Archives', href: '/solutions/archives' },
      { label: 'Enterprise', href: '/solutions/enterprise' },
      { label: 'Pricing', href: '/pricing' },
    ],
  },
  {
    title: 'Resources',
    links: [
      { label: 'Documentation', href: '/docs' },
      { label: 'API Reference', href: '/api' },
      { label: 'Blog', href: '/blog' },
      { label: 'Case Studies', href: '/case-studies' },
      { label: 'Support', href: '/support' },
    ],
  },
  {
    title: 'Legal',
    links: [
      { label: 'Privacy Policy', href: '/privacy' },
      { label: 'Terms of Service', href: '/terms' },
      { label: 'Cookie Policy', href: '/cookies' },
      { label: 'Security', href: '/security' },
      { label: 'Compliance', href: '/compliance' },
    ],
  },
];

const socialLinks = [
  { name: 'Twitter/X', href: '#', icon: 'twitter' },
  { name: 'LinkedIn', href: '#', icon: 'linkedin' },
  { name: 'GitHub', href: '#', icon: 'github' },
  { name: 'Discord', href: '#', icon: 'discord' },
];

const currentYear = new Date().getFullYear();
---

<footer class="relative bg-[var(--color-bg-dark)] border-t border-[var(--glass-border)]" role="contentinfo">
  <!-- Gradient Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-[var(--color-primary)] to-transparent opacity-50"></div>
  
  <div class="container-main">
    <!-- Main Footer Content -->
    <div class="py-16 lg:py-20">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-8">
        <!-- Brand Column -->
        <div class="lg:col-span-4">
          <!-- Logo -->
          <a href="/" class="inline-flex items-center gap-3 mb-6" aria-label="K Entertainment Studio - Home">
            <div class="relative w-12 h-12 flex items-center justify-center">
              <div class="absolute inset-0 bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-accent-purple)] rounded-xl opacity-20"></div>
              <svg viewBox="0 0 40 40" class="w-10 h-10 relative z-10" aria-hidden="true">
                <defs>
                  <linearGradient id="footerLogoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#00d4ff" />
                    <stop offset="100%" style="stop-color:#a855f7" />
                  </linearGradient>
                </defs>
                <path 
                  d="M12 8v24M12 20l10-12M12 20l10 12" 
                  stroke="url(#footerLogoGradient)" 
                  stroke-width="3" 
                  stroke-linecap="round" 
                  stroke-linejoin="round"
                  fill="none"
                />
                <circle cx="28" cy="20" r="6" stroke="url(#footerLogoGradient)" stroke-width="2" fill="none" opacity="0.6" />
                <circle cx="28" cy="20" r="2" fill="url(#footerLogoGradient)" opacity="0.8" />
              </svg>
            </div>
            <div>
              <span class="text-xl font-bold gradient-text">K Entertainment</span>
              <span class="text-sm text-[var(--color-text-muted)] block">Studio Inc.</span>
            </div>
          </a>
          
          <!-- Tagline -->
          <p class="text-[var(--color-text-secondary)] mb-6 max-w-sm">
            The World's Centralized Intelligent Vault for All Entertainment Content — Stored Forever.
          </p>
          
          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-3 mb-8">
            <div class="glass-card px-3 py-1.5 text-xs text-[var(--color-text-muted)]">
              <span class="text-green-400 mr-1">●</span> SOC 2 Certified
            </div>
            <div class="glass-card px-3 py-1.5 text-xs text-[var(--color-text-muted)]">
              <span class="text-green-400 mr-1">●</span> ISO 27001
            </div>
            <div class="glass-card px-3 py-1.5 text-xs text-[var(--color-text-muted)]">
              <span class="text-green-400 mr-1">●</span> GDPR Compliant
            </div>
          </div>
          
          <!-- Social Links -->
          <div class="flex gap-3">
            {socialLinks.map((social) => (
              <a
                href={social.href}
                class="w-10 h-10 glass-card flex items-center justify-center text-[var(--color-text-muted)] hover:text-[var(--color-primary)] hover:border-[var(--color-primary)]/30 transition-all duration-300"
                aria-label={`Follow us on ${social.name}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                {social.icon === 'twitter' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                )}
                {social.icon === 'linkedin' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {social.icon === 'github' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                  </svg>
                )}
                {social.icon === 'discord' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
        
        <!-- Links Columns -->
        <div class="lg:col-span-8">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {footerSections.map((section) => (
              <div>
                <h3 class="text-sm font-semibold text-[var(--color-text-primary)] uppercase tracking-wider mb-4">
                  {section.title}
                </h3>
                <ul class="space-y-3">
                  {section.links.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-primary)] transition-colors duration-200"
                        {...(link.isExternal && { target: '_blank', rel: 'noopener noreferrer' })}
                      >
                        {link.label}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Newsletter Section -->
    <div class="py-8 border-t border-[var(--glass-border)]">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div>
          <h3 class="text-lg font-semibold mb-1">Stay Updated</h3>
          <p class="text-sm text-[var(--color-text-muted)]">Get the latest news on digital preservation and platform updates.</p>
        </div>
        <form class="flex gap-3 w-full md:w-auto" action="#" method="POST">
          <label for="newsletter-email" class="sr-only">Email address</label>
          <input
            type="email"
            id="newsletter-email"
            name="email"
            placeholder="Enter your email"
            required
            class="flex-1 md:w-64 px-4 py-3 bg-[var(--color-bg-glass)] border border-[var(--glass-border)] rounded-lg text-sm text-[var(--color-text-primary)] placeholder:text-[var(--color-text-muted)] focus:outline-none focus:border-[var(--color-primary)] transition-colors"
          />
          <button
            type="submit"
            class="btn-primary whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="py-6 border-t border-[var(--glass-border)]">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-[var(--color-text-muted)]">
        <p>
          © {currentYear} K Entertainment Studio Inc. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          <a href="/privacy" class="hover:text-[var(--color-primary)] transition-colors">Privacy</a>
          <a href="/terms" class="hover:text-[var(--color-primary)] transition-colors">Terms</a>
          <a href="/cookies" class="hover:text-[var(--color-primary)] transition-colors">Cookies</a>
          <span class="text-[var(--color-text-muted)]/50">|</span>
          <span class="flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
            All Systems Operational
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>
